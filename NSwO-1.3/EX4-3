void print_errors(void)
{
  int flags, line;
  char *data, *file;
  unsigned long code;
  code = ERR_get_error_line_data(&file, &line, &data, &flags);
  while (code)
  {
    printf("error code; %lu in %s line %d.\n", code, file, line);
    if (data && (flags & ERR_TXT_STRING))
      printf("error data: %s\n", data);
    code = ERR_get_error_line_data(&file, &line, &data, &flags);
  }
}
